namespace PongMessaging;

// Supported game modes
// Corresponds to the `<mode>` segment in subjects like `games.<mode>.<gameId>...`
enum Mode : byte {
  PONG = 0,
  PONGIO = 1,
  PONGBR = 2
}

// Generic key/value for optional parameters
// Can be used for MatchCreateRequest.options
table Option {
  key:   string;
  value: string;
}

// Single player input for physics or match-input messages
table PlayerInput {
  playerId: string;
  x:        float;
  y:        float;
}

