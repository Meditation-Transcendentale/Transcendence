#ah {
	position: absolute;
	pointer-events: none;
	display: grid;
	row-gap: 1vh;
	width: 100%;
	right: 7vw;
	top: 60%;
	z-index: 2;
}

.h1 {
	background-color: black;
	pointer-events: all;
	color: white;
	z-index: 2;
	text-align: right;
	font-size: 2vh;
	height: 2vh;
	padding: 1vh;
	animation: h1 1.1s ease-in-out 1;
	animation-fill-mode: both;
	transition: padding 0.3s ease-in-out 0.01s;
}

.h1:hover {
	transform: scale(2);
	padding: 2vh;
}



@keyframes h1 {
	0% {
		opacity: 0;
		width: 0%;
		/* transform: translate3d(-100%, 0, 0) skewX(30deg); */

	}

	60% {
		opacity: 1;
		transform: skewX(30deg);
	}

	80% {
		transform: skewX(-10deg);
	}

	100% {
		transform: skewX(10deg);
	}
}

#ah1 {
	animation-delay: 1.01s;
	width: calc(100% - 60px);
	grid-row: 1/1;
}


#ah2 {
	animation-delay: 1.02s;
	width: calc(100% - 49px);
	grid-row: 2/2;
}

#ah3 {
	animation-delay: 1.03s;
	width: calc(100% - 38px);
	grid-row: 3/3;
}

#ah4 {
	animation-delay: 1.04s;
	width: calc(100% - 27px);
	grid-row: 4/4;
}

#av {
	position: absolute;Register
	display: grid;
	gap: 0.5vh;
	z-index: 1;
	height: 100%;
	right: 13vw;
}

.v1 {
	background-color: orange;
	height: 100%;
	width: 8vh;
	top: 0%;
	z-index: 1;
	animation: v1 0.3s ease-in-out 1;
	animation-fill-mode: both;
}

@keyframes v1 {
	0% {
		height: 0;
		opacity: 0;
		/*transform: skewY(40deg)*/
	}

	100% {
		opacity: 1;
		/*transform: skewY(40deg)*/
	}
}

#av1 {
	grid-column: 4 / 4;
	grid-row: 1 / 1;
	animation-delay: 2s;
}

#av2 {
	grid-column: 1 / 1;
	grid-row: 1 / 1;
	animation-delay: 1.9s;
}

#av3 {
	grid-column: 2 / 2;
	grid-row: 1 / 1;
	animation-delay: 1.9s;
}

#av4 {
	grid-column: 3 / 3;
	grid-row: 1 / 1;
	animation-delay: 1.9s;
}


