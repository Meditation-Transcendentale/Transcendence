.c1 {
	pointer-events: none;
	position: absolute;
	width: 50vh;
	height: 50vh;
	border: 2vh solid red;
	border-radius: 50%;
	left: 50%;
	z-index: 3;
	transform: translateX(-50%);
	animation: c1 1.5s ease-in-out 1;
	animation-fill-mode: both;
}

@keyframes c1 {
	0% {
		animation-timing-function: cubic-bezier(.55, .055, .675, .19);
		opacity: 0.0;
		transform: scale3d(.10, .10, .10) translate3d(-50%, -1000px, 0);
	}

	60% {
		animation-timing-function: cubic-bezier(.175, .885, .32, 1);
		opacity: 1;
		transform: scale3d(.475, .475, .475) translate3d(-200%, 60px, 0);
	}

	100% {
		animation-timing-function: cubic-bezier(.55, .055, .675, .19);
		opacity: 0;
		transform: scale3d(3.475, 3.475, 3.475) translate3d(0%, 60px, 0);
	}

}

